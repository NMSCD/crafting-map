{
  "scripts": {
    "lint:code": "prettier -c src/",
    "lint:ts": "tsc --noEmit",
    "test": "npm run lint:code && npm run lint:ts",
    "analyze": "esbuild src/index.ts src/menu/menu.tsx --minify --bundle --loader:.ts=ts --outdir=_site --metafile=meta.json",
    "build": "esbuild src/index.ts src/menu/menu.tsx --minify --bundle --loader:.ts=ts --target=es2022 --outdir=_site",
    "dev": "esbuild src/index.ts src/menu/menu.tsx --sourcemap --bundle --loader:.ts=ts --target=es2022 --watch --outdir=_site",
    "prepare": "husky install"
  },
  "dependencies": {
    "d3": "^7.8.1",
    "preact": "^10.11.3",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@types/d3": "^7.4.0",
    "csv": "^6.1.0",
    "esbuild": "^0.17.0",
    "husky": "^8.0.3",
    "node-fetch": "^2",
    "node-html-parser": "^5.2.0",
    "prettier": "^2.8.3"
  },
  "prettier": {
    "printWidth": 120
  }
}
